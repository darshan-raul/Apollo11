# Apollo 11 Astronaut Onboarding Environment Variables
# Copy this file to .env and update the values for your environment

# Database Configuration
DATABASE_URL=postgres://apollo11:apollo11@postgres:5432/apollo11?sslmode=disable

# Redis Configuration
REDIS_URL=redis://redis:6379

# Core API Configuration
CORE_API_URL=http://core-api:8080
JWT_SECRET=apollo11-secret-key-change-in-production

# Simulator Configuration
SIMULATION_DELAY_MIN=3
SIMULATION_DELAY_MAX=8
SUCCESS_RATE=0.8

# Frontend Configuration
FRONTEND_PORT=8000

# Admin Dashboard Configuration
ADMIN_DASHBOARD_PORT=8501

# Kubernetes Configuration (for K8s deployment)
K8S_NAMESPACE=apollo11
K8S_INGRESS_HOST=apollo11.local
K8S_ADMIN_INGRESS_HOST=apollo11-admin.local

# Production Settings (uncomment and configure for production)
# DATABASE_URL=postgres://username:password@host:port/database?sslmode=require
# REDIS_URL=redis://username:password@host:port
# JWT_SECRET=your-super-secure-jwt-secret-key-here
# ENABLE_SSL=true
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem
